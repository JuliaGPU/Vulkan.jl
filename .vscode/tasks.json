{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate system image",
            "command": "julia",
            "type": "shell",
            "args": [
                "$HOME/.julia/sysimages/create_env_sysimage.jl",
                "${cwd}"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "NVIDIA Nsight Systems - Profile application",
            "command": "nsys",
            "type": "shell",
            "args": [
                "profile",
                "-o",
                "prof",
                "--trace=vulkan",
                "--force-overwrite=true",
                "julia",
                "-JJuliaSysimage.so",
                "--project=.",
                "test/runtests.jl",
                "--novalidate"
            ],
            "problemMatcher": "$tsc",
            "group": "build",
            "options": {
                "env": {
                    "DISPLAY": ":1"
                }
            }
        },
        {
            "label": "RenderDoc - Profile application",
            "command": "renderdoccmd",
            "type": "shell",
            "args": [
                "capture",
                "-d",
                "$HOME/julia-1.5.2/lib",
                "-w",
                "julia",
                "--project=$(pwd)",
                "--sysimage=$(pwd)/JuliaSysimage.so",
                "$(pwd)/test/runtests.jl",
                "--novalidate"
            ],
            "problemMatcher": "$tsc",
            "group": "build",
            "options": {
                "env": {
                    "DISPLAY": ":1"
                }
            }
        },
        {
            "label": "Generate API wrapper",
            "command": "${HOME}/julia/1.5.2/bin/julia",
            "type": "shell",
            "args": [
                "--color=yes",
                "--project=generator/",
                "-e",
                "'using Pkg; Pkg.instantiate(); include(\"generator/scripts/generate_library.jl\")'",
            ],
            "problemMatcher": "$tsc",
            "group": "build",
        },
        {
            "type": "julia",
            "command": "juliasysimagebuild",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "label": "julia: Build custom sysimage for current environment (experimental)"
        }
    ]
}
